<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path 'cocktails.jpg' %>');" >
  <div class="container">
    <h1>Cocktails</h1>
  </div>
</div>

    <% @cocktails.each do |cocktail| %>
    <% if cocktail.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
      <ul>
        <li>
          <%= link_to cocktail.name, cocktail %>
          <%= link_to '👁', cocktail %>
        </li>
      </ul>
    </div>
    <% end %>

    <% end %>

<br>

<%= link_to 'Create a new cocktail', new_cocktail_path %>

